# GhanaTech Backend Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Connection
# For local: mongodb://localhost:27017/ghanatech
# For Atlas: mongodb+srv://username:password@cluster.mongodb.net/ghanatech
MONGODB_URI=mongodb://localhost:27017/ghanatech

# JWT Authentication
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Paystack Payment Gateway
# Get keys from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
PAYSTACK_PUBLIC_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
